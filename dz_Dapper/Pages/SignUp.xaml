<Page x:Class="dz_Dapper.Pages.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dz_Dapper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

	<Grid Background="Wheat">
		<Button Height="30" Background="Orange" Width="100" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 8 0 0" Content="Назад" Click="Back_btn_click" IsCancel="True"/>
		<StackPanel HorizontalAlignment="Center" Width="200" VerticalAlignment="Center">
			<TextBlock Text="Логін:" FontSize="20"/>
			<TextBox x:Name="login" FontSize="20"/>
			<TextBlock Text="Пароль:" FontSize="20"/>
			<PasswordBox x:Name="password" FontSize="20"/>
			<TextBlock Text="Повторіть пароль:" FontSize="20"/>
			<PasswordBox x:Name="password2" FontSize="20"/>
			<Button Content="Зареєструватися" Width="170" Height="40" FontSize="20" Margin="10 10 0 0" Click="SignUp_btn_click" Background="Orange"/>
		</StackPanel>
	</Grid>
</Page>
